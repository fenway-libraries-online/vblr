#!/bin/sh

err=0

echo 'Checking scripts...' >&2
main() {
    for f in $@; do
        case "$(head -n1 < $f)" in
            *zsh*)  check_zsh $f  ;;
            *perl*) check_perl $f ;;
            *sh*)   check_sh $f   ;;
            *)      fatal "unknown file type: $f" ;;
        esac
    done
    if [ $err = 0 ]; then
        echo 'The scripts all look good' >&2
        echo >&2
    else
        echo 'There was a problem' >&2
        exit $err
    fi
}

ok() {
    echo " ok  $1" >&2
}

fail() {
    echo "FAIL $1" >&2
    err=1
}

check_perl() {
    if perl -c $1 2>&1 | fgrep -iq error; then
        fail $1
    else
        ok $1
    fi
}

check_zsh() {
    if zsh -n $1 > /dev/null 2>&1; then
        ok $1
    else
        fail $1
    fi
}

check_sh() {
    if sh -n $1 > /dev/null 2>&1; then
        ok $1
    else
        fail $1
    fi
}

fatal() {
    echo "fatal error: $*" >&2
    exit 2
}

main "$@"
